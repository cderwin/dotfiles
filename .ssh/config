Host bitbucket
    User git
    HostName bitbucket.org
    Port 22
    IdentityFile ~/.ssh/id_rsa

Host github
    User git
    HostName github.com
    Port 22
    IdentityFile ~/.ssh/id_rsa

Host toys
  HostName 127.0.0.1
  User vagrant
  Port 2222
  UserKnownHostsFile /dev/null
  StrictHostKeyChecking no
  PasswordAuthentication no
  IdentityFile /ps/vm/toys/vagrant_centos_6_vbox/.vagrant/machines/default/virtualbox/private_key
  IdentitiesOnly yes
  LogLevel FATAL
  ForwardAgent yes

